{
  "coc.preferences.extensionUpdateCheck": "daily",
  "diagnostic.hintSign": "-",
  "diagnostic.infoSign": "›",
  "diagnostic.warningSign": "»",
  "diagnostic.errorSign": "X",
  "clangd.path": "clangd-10",
  "python.linting.mypyEnabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "~/.local/bin/flake8",
  "python.linting.flake8Args": [
    "--max-line-length=120",
    "--ignore=E402,E203,W503"
    // E402: module level import not at top of file
    // E203: whitespace before char
    // W503: line break before binary operator
  ],
  "python.linting.pylintEnabled": true,
  "python.linting.pylintPath": "~/.local/bin/pylint",
  "python.linting.pylintArgs": [
    "--score=n",
    "--jobs=0"
  ],
  "python.sortImports.path": "~/.local/bin/isort",
  "python.sortImports.args": [
    "--line-length=120",
    "--multi-line=3",
    "--trailing-comma",
    "--use-parentheses"
  ],
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "~/.local/bin/black",
  "python.formatting.blackArgs": [
    "--line-length=120"
  ],
  "python.formatting.yapfPath": "~/.local/bin/yapf",
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  }
}
