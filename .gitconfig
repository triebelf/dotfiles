[include]
    path = ~/.gitlocal
[color]
    ui = auto
[core]
    editor = vim
    ignorecase = false
[pull]
    ff = only
[push]
    default = simple
[diff]
    noprefix = true
    wordRegex = "[^[:space:].,;]+"
[merge]
    tool = vim_mergetool
    conflictstyle = diff3
[mergetool "vim_mergetool"]
    cmd = vim -f -c "MergetoolStart" "$MERGED" "$BASE" "$LOCAL" "$REMOTE"
    trustExitCode = true
    prompt = false
